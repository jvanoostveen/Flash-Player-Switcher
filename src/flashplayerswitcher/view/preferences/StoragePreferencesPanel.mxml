<?xml version="1.0" encoding="utf-8"?>
<s:Panel xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark" 
		 xmlns:mx="library://ns.adobe.com/flex/mx" width="100%"
		 dropShadowVisible="false" title="Storage">
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	<fx:Script>
		<![CDATA[
			import mx.collections.ArrayCollection;
			
			[Bindable]
			public var pluginStorageLocations:ArrayCollection = new ArrayCollection([{label: "Application Storage"}, {label: "Other..."}]);
			
			[Bindable]
			public var allowEditing:Boolean = true;
			
			private function onAllowEditingChanged(e:Event):void
			{
				
			}
		]]>
	</fx:Script>
	<s:VGroup paddingTop="15" width="100%">
		<s:HGroup width="100%">
			<s:Group width="40%">
				<s:Label text="Plugin storage location:" paddingTop="6" right="0"/>
			</s:Group>
			<s:DropDownList dataProvider="{pluginStorageLocations}" selectedIndex="0"  width="150"/>
		</s:HGroup>
		<s:HGroup width="100%">
			<s:Group width="40%">
				<s:Label text="Allow editing:" paddingTop="5" right="0"/>
			</s:Group>
			<s:CheckBox selected="{allowEditing}" change="onAllowEditingChanged(event)"/>
		</s:HGroup>
	</s:VGroup>
</s:Panel>
