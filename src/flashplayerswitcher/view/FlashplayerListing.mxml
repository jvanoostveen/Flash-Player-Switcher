<?xml version="1.0" encoding="utf-8"?>
<s:VGroup xmlns:fx="http://ns.adobe.com/mxml/2009"
          xmlns:s="library://ns.adobe.com/flex/spark"
          xmlns:mx="library://ns.adobe.com/flex/mx">
	<fx:Script>
		<![CDATA[
			import flashplayerswitcher.model.vo.FlashPlayerPlugin;
			
			private function sortVersionCompare(itemA:FlashPlayerPlugin, itemB:FlashPlayerPlugin, column:GridColumn):int
			{
				if (itemA.major < itemB.major || itemA.minor < itemB.minor || itemA.revision < itemB.revision || itemA.build < itemB.build)
					return -1;
				else if (itemA.major > itemB.major || itemA.minor > itemB.minor || itemA.revision > itemB.revision || itemA.build > itemB.build)
					return 1;
				else
					return 0;
			}
		]]>
	</fx:Script>
	<s:DataGrid id="listing" width="385" height="364" editable="true">
		<s:columns>
			<s:ArrayList>
				<s:GridColumn dataField="name" headerText="Name"></s:GridColumn>
				<s:GridColumn dataField="version" editable="false" headerText="Version" sortCompareFunction="sortVersionCompare"></s:GridColumn>
				<s:GridColumn dataField="debugger" editable="false" headerText="Debugger"></s:GridColumn>
			</s:ArrayList>
		</s:columns>
		<s:typicalItem>
			<fx:Object name="Flash Player" version="10.3.0.23" debugger="false"></fx:Object>
		</s:typicalItem>
	</s:DataGrid>
	<s:HGroup horizontalAlign="right" width="100%">
		<s:Button id="downloadButton" label="Download more..."/>
		<mx:Spacer width="100%" />
		<s:Button id="installButton" label="Install" enabled="false"/>
		<s:Button id="deleteButton" label="Delete" enabled="false"/>
	</s:HGroup>
</s:VGroup>